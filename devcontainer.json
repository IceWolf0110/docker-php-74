{
    "name": "PHP 7.4 CodeIgniter 3 Dev Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "xdebug.php-debug",
                "bmewburn.vscode-intelephense-client",
                "felixfbecker.php-intellisense",
                "mrmckeb.typescript"
            ]
        }
    },
    "runArgs": [
        "--name", "php74-codeigniter-dev"
    ],
    "workspaceFolder": "/home/son/workspace",
    "remoteUser": "son",
    "postCreateCommand": "sudo chown -R son:son /home/son/workspace",
    "forwardPorts": [80],
}
